<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <ScrollView 
		android:id="@+id/sv_main"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
		<!--android:background="#A000"-->
	    
		<LinearLayout
		    android:id="@+id/ll_main"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:orientation="vertical"
		    android:padding="20dp"
		    android:background="#A000">
	    
		    <TextView
		        android:id="@+id/tv_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center_horizontal"
		        android:padding="20dp"
		        android:text="Mokomoko"
		        android:textColor="#fff"
		        android:textSize="30dp"
		        android:typeface="normal" />
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="0.5"
		        android:gravity="center" >
	
		        <Button
		            android:id="@+id/b_play"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingBottom="20dp"
		            android:paddingLeft="50dp"
		            android:paddingRight="50dp"
		            android:paddingTop="20dp"
		            android:text="Play"
		            android:textSize="20dp" />
	
		        <Button
		            android:id="@+id/b_reset"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:enabled="false"
		            android:paddingBottom="20dp"
		            android:paddingLeft="50dp"
		            android:paddingRight="50dp"
		            android:paddingTop="20dp"
		            android:text="Reset"
		            android:textSize="20dp" />
	
		    </LinearLayout>
	
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:gravity="center_vertical|top"
		        android:orientation="vertical" >
	
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
	
		            <TextView
		                android:id="@+id/tv_nb_player"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Player : "
		                android:textAppearance="?android:attr/textAppearanceMedium" />
	
		            <Button
		                android:id="@+id/b_add_player"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingBottom="10dp"
		                android:paddingLeft="20dp"
		                android:paddingRight="20dp"
		                android:paddingTop="10dp"
		                android:text="+"
		                android:textSize="20dp"
		                android:textStyle="bold"
		                android:typeface="normal" />
	
		            <Button
		                android:id="@+id/b_delete_player"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingBottom="10dp"
		                android:paddingLeft="20dp"
		                android:paddingRight="20dp"
		                android:paddingTop="10dp"
		                android:text="-"
		                android:textSize="20dp"
		                android:textStyle="bold"
		                android:typeface="normal" />
	
		        </LinearLayout>
	
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
	
		            <TextView
		                android:id="@+id/tv_speed"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Speed : "
		                android:textAppearance="?android:attr/textAppearanceMedium" />
	
		            <SeekBar
		                android:id="@+id/sb_speed"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_weight="1" />
		        </LinearLayout>
	
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical" >
	
		            <TextView
		                android:id="@+id/tv_mode"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Game mode : "
		                android:textAppearance="?android:attr/textAppearanceMedium" />
	
		            <RadioGroup
		                android:id="@+id/rg_mode"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content" >
	
		                <RadioButton
		                    android:id="@+id/r_mode_dm"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:checked="true"
		                    android:text="Death Match" />
	
		                <RadioButton
		                    android:id="@+id/r_mode_og"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:checked="false"
		                    android:text="Overgrowth" />
		                
		                <RadioButton
		                    android:id="@+id/r_mode_lr"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:checked="false"
		                    android:text="Race" />
		                
		                <RadioButton
		                    android:id="@+id/r_mode_cs"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:checked="false"
		                    android:text="Suicide" />
		            </RadioGroup>
		        </LinearLayout>
	
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:gravity="center_vertical"
		            android:orientation="horizontal" >
	
		            <TextView
		                android:id="@+id/tv_map_scale"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="Map scale : "
		                android:textAppearance="?android:attr/textAppearanceMedium" />
	
		            <SeekBar
		                android:id="@+id/sb_map_scale"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:layout_weight="1" />
		        </LinearLayout>
	
		    </LinearLayout>
	
		</LinearLayout>
	
	</ScrollView>
</RelativeLayout>
